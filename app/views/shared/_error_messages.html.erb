<% if @reservation.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" role="alert">
      Formularz zawiera następujące błędy:
    </div>
    <ul>
    <% @reservation.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
